datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id        String   @id @default(cuid())
  title     String
  description String?
  src       String   // HLS master.m3u8 path
  createdAt DateTime @default(now())
}
